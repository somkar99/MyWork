<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greylight"
    tools:context="com.example.admin.h2hpartner.UI.ServerDown">

    <ImageView
        android:id="@+id/ivServerDownIcon"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/sad_cloud"
        android:padding="5dp"
        android:tint="@color/light_grey"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:textSize="18sp"
        android:alpha="0.6"
        android:textColor="@color/grey"
        android:text="Sorry ! there  has been error connecting to server.. \n Please try again later.."/>

</LinearLayout>
